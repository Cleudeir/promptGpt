{
  "name": "Page Redder",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Make this page red"
  },
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "run_at": "document_start",
      "js": ["contentScript.js"]
    }
  ]
}